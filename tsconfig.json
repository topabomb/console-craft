{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "*.json", "build", "dist"]
}
